<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProfileSyncApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProfileSyncApp"
    xmlns:pages="clr-namespace:ProfileSyncApp.Pages"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        ContentTemplate="{DataTemplate pages:LoadingPage}"
        Route="LoadingPage" />
    <ShellContent 
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage"/>

    <TabBar Route = "HomePage">
        <Tab Title="Home" Icon="house_door_fill.svg">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate pages:HomePage}"
                Route="HomePage" />
        </Tab>
        <Tab Title="Profile" Icon="heart_fill.svg">
            <ShellContent
                Title="Profile"
                ContentTemplate="{DataTemplate pages:ProfilePage}"
                Route="ProfilePage" />
        </Tab>
        <Tab Title="Settings" Icon="gear_fill.svg">
            <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate pages:SettingsPage}"
                Route="SettingsPage" />
        </Tab>
    </TabBar>
</Shell>